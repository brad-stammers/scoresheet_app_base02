<p id="notice"><%= notice %></p>

<h1>Bowlings</h1>

<table>
  <thead>
    <tr>
      <th>Bowling team</th>
      <th>Overs</th>
      <th>Runs</th>
      <th>Wickets</th>
      <th>Wides</th>
      <th>No balls</th>
      <th>Inning</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bowlings.each do |bowling| %>
      <tr>
        <td><%= bowling.bowling_team %></td>
        <td><%= bowling.overs %></td>
        <td><%= bowling.runs %></td>
        <td><%= bowling.wickets %></td>
        <td><%= bowling.wides %></td>
        <td><%= bowling.no_balls %></td>
        <td><%= bowling.inning_id %></td>
        <td><%= link_to 'Show', bowling %></td>
        <td><%= link_to 'Edit', edit_bowling_path(bowling) %></td>
        <td><%= link_to 'Destroy', bowling, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
